<body>
   <body>

    	{% block header %}
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <br>
                    <h1 class="pull-right">ACcorp </h1>
                    <img class="pull-right" src="{{asset('../web/img/logo2.png')}}">
                    
                </div>
            </div>
        {% endblock %}
    	{% block menu %}{% endblock %}
    	{% block body %}
            {% if is_granted('ROLE_ADMIN')%}
                <!-- Navbar ROLE_ADMIN -->
                <nav id="menuNavegacio" class='navbar navbar-default'>
                    <!-- Ratlletes del mòbil-->
                    <div class='navbar-header'>
                        <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar-1' aria-expanded='false'>
                            <span class='sr-only textNavbar'>MENU</span>
                            <span class='icon-bar'></span>
                            <span class='icon-bar'></span>
                            <span class='icon-bar'></span>
                        </button>
                    </div>
                    <!--part per dispositius grans-->
                    <div class='collapse navbar-collapse ' id='navbar-1'>
                    </div>
                </nav>
                Estas logueja amb el rol ADMIN
                <a href="{{ path('logout') }}">Logout</a>
            {% endif %}
            {% if is_granted('ROLE_TREB')%}
                Estas loguejat amb el rol TREB<br>
                <a href="{{ path('logout') }}">Logout</a>
            {% endif %}
            {% if is_granted('ROLE_CONS')%}<br>
                Estas loguejat amb el rol CONS<br>
                <a href="{{ path('logout') }}">Logout</a>
            {% endif %}
        {% endblock %}
        {% block footer %}
        	<div class='footer'>
                <i class="fa fa-copyright" aria-hidden="true">Copyright 2017 ACcorp by Alba Casas & Cristina Roigé</i>
            </div>
        {% endblock %}
    

    
</body>
