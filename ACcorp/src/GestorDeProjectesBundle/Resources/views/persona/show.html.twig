{% extends 'base.html.twig' %}

{% block body %}
    <h1>Persona</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ persona.id }}</td>
            </tr>
            <tr>
                <th>Nif</th>
                <td>{{ persona.nif }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ persona.nom }}</td>
            </tr>
            <tr>
                <th>Cognom</th>
                <td>{{ persona.cognom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ persona.email }}</td>
            </tr>
            <tr>
                <th>Hores</th>
                <td>{{ persona.hores }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ persona.role }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('persona_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('persona_edit', { 'id': persona.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
